on boot
    chmod 0660 /sys/class/touch/tp_dev/double_swipe_enable
    chmod 0660 /sys/class/touch/tp_dev/double_tap_enable
    chmod 0660 /sys/class/touch/tp_dev/down_arrow_enable
    chmod 0660 /sys/class/touch/tp_dev/left_arrow_enable
    chmod 0660 /sys/class/touch/tp_dev/letter_m_enable
    chmod 0660 /sys/class/touch/tp_dev/letter_o_enable
    chmod 0660 /sys/class/touch/tp_dev/up_arrow_enable
    chmod 0660 /sys/class/touch/tp_dev/up_swipe_enable
    chmod 0660 /sys/class/touch/tp_dev/right_arrow_enable
    chown system system /sys/class/touch/tp_dev/double_swipe_enable
    chown system system /sys/class/touch/tp_dev/double_tap_enable
    chown system system /sys/class/touch/tp_dev/down_arrow_enable
    chown system system /sys/class/touch/tp_dev/left_arrow_enable
    chown system system /sys/class/touch/tp_dev/letter_m_enable
    chown system system /sys/class/touch/tp_dev/letter_o_enable
    chown system system /sys/class/touch/tp_dev/up_arrow_enable
    chown system system /sys/class/touch/tp_dev/up_swipe_enable
    chown system system /sys/class/touch/tp_dev/right_arrow_enable

service vendor.touch-hal-1-0 /vendor/bin/hw/vendor.lineage.touch@1.0-service.lenovo_msmnile
    class hal
    user system
    group system
